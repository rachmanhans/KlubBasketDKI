<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditPelatihActivity">

    <ProgressBar
        android:id="@+id/progress_barPel"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="52dp" />

    <EditText
        android:id="@+id/namaPelatih_et_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:hint="Edit Pelatih"
        android:layout_marginStart="16dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/ketPelatih_et_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:hint="Posisi"
        android:layout_marginStart="16dp"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btn_image_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/sp_rectangle_menu"
        android:text="Choose Image"
        android:textAllCaps="false"
        />

    <ImageView
        android:id="@+id/imageViewPel_edit"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/btnPel_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Edit"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/sp_rectangle_menu"
        android:textAllCaps="false"/>


    <Button
        android:id="@+id/btnPel_cancel_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Cancel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/sp_rectangle_menu"
        android:textAllCaps="false"/>

</LinearLayout>